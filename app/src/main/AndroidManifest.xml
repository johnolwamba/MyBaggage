<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.mybaggage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenView"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeFirst"
            android:label="@string/home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyProfile"
            android:label="My Profile"
            android:parentActivityName=".HomeFirst"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPassword"
            android:label="@string/title_activity_forgot_password"
            android:screenOrientation="portrait"
            android:parentActivityName=".SignInView" />
        <activity
            android:name=".Nuggets"
            android:label="@string/title_activity_nuggets"
            android:parentActivityName=".HomeFirst"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Notifications"
            android:label="@string/title_activity_notifications"
            android:parentActivityName=".HomeFirst"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignInView"
            android:label="Sign In"
            android:screenOrientation="portrait"/>

        <activity android:name=".CreateProfileView"
            android:label="Create Profile"
            android:screenOrientation="portrait"
            android:parentActivityName=".SignInView" />
    </application>

</manifest>